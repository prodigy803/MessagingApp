<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joshi.whatsappclone1.InviteFriendsFragment"
    android:id="@+id/RelativeLayout1">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Type Here to Search and Invite Friends or Search ChatRooms"
        android:id="@+id/acceptUsername"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchForUsers"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:id="@+id/emailsOfFriendsRequested"
        android:visibility="visible" />

    <Button
        android:text="Search Users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/searchForUsers"
        android:onClick="SearchForFriends"
        android:layout_below="@+id/acceptUsername"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Search ChatRooms?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/searchForUsers"
        android:layout_alignParentEnd="true"
        android:id="@+id/SearchChatRoomButton" />


</RelativeLayout>